<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_ocean_blue"
    android:padding="10dp"
    android:layoutDirection="rtl"
    android:id="@+id/edge_plus_prices_layout">

    <ImageView
        android:id="@+id/edge_plus_prices_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/edge_plus_prices_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_gravity="end"
        android:gravity="center_vertical"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/edge_plus_prices_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start|center_vertical"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/edge_plus_prices_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end|center_vertical"
            tools:ignore="ContentDescription" />

    </FrameLayout>

</LinearLayout>